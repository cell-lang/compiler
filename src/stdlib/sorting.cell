T+ serialize([+T] set) {
  seq = ();
  for e <- set
    seq = (seq | e);
  fail if seq == ();
  return seq;
}

(X, Y)+ serialize([+X, Y] rel) = serialize([(x, y) : x y <- rel]);

////////////////////////////////////////////////////////////////////////////////

() sort([]) = ();

Ord+ sort([+Ord] set) = sort(serialize(set));

(Ord, V)+ sort([+Ord -> V] map) = sort_by(serialize(map), $(0));

