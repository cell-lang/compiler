() sort([], (T T -> Bool)) = ();

T+ sort([+T] set, (T T -> Bool) ord) = sort(serialize(set), ord);

(T, V)+ sort([+T -> V] map, (T T -> Bool) ord) = sort(serialize(map), ord($a(0), $b(0)));

