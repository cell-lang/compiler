T attach(T obj, Any data) = undefined; // Overridden in the generated code

Maybe[Any] fetch(T obj) = undefined;   // Overridden in the generated code

A transfer(A to, B from) =
  match (fetch(from))
    just(a?)  = attach(to, a),
    nothing   = to;

