String user_repr(Pattern ptrn) =
  ptrn_symbol         = "<+>",
  ptrn_float          = "<!>",
  ptrn_empty_seq      = "()",
  ptrn_ne_seq         = "()",
  ptrn_empty_rel      = "[]",
  ptrn_ne_set         = "[]",
  ptrn_ne_map         = "[->]",
  ptrn_ne_bin_rel     = "[,]",
  ptrn_ne_tern_rel    = "[,,]",
  ptrn_any            = "_",
  ptrn_symbol(s?)     = _print_(match (s) object(a?) = a),
  ptrn_integer(t?)    = user_repr(t),
  ptrn_tuple(ps?)     = "(" & append((user_repr(p) : p <- ps), ", ") & ")",
  ptrn_tag_obj()      = ptrn_tag_obj_user_repr(ptrn.tag, ptrn.obj),
