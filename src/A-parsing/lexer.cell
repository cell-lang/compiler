Trie[Nat, PlainToken] string_to_symbol_trie {
  raw_str_to_symb = [nonempty(chars(str)) -> symb : str, symb <- string_to_symbol];
  return trie(raw_str_to_symb);
}


[String -> PlainToken] string_to_symbol = [
  "("     ->  left_parenthesis,
  ")"     ->  right_parenthesis,
  "["     ->  left_bracket,
  "]"     ->  right_bracket,
  "{"     ->  left_brace,
  "}"     ->  right_brace,
  ","     ->  comma,
  ";"     ->  semicolon,

  "?"     ->  question_mark,
  "="     ->  equals,
  "|"     ->  pipe,
  ":"     ->  colon,
  "_"     ->  underscore,
  "^"     ->  circumflex,
  "."     ->  dot,
  "~"     ->  tilde,
  "@"     ->  at,
  "&"     ->  ampersand,
  "!"     ->  bang,
  "#"     ->  hash,
  "$"     ->  dollar,

  "<"     ->  lower,
  ">"     ->  greater,
  "+"     ->  plus,
  "-"     ->  minus,
  "*"     ->  asterisk,
  "/"     ->  slash,

  ".."    ->  double_dot,

  "=="    ->  double_equals,
  "!="    ->  not_equal,
  "<="    ->  lower_eq,
  ">="    ->  greater_eq,

  ":="    ->  assign,
  "?="    ->  try_assign,
  "->"    ->  right_arrow,
  "=>"    ->  double_right_arrow,
  "<-"    ->  left_arrow,
  "<~"    ->  wavy_left_arrow,

  "..."   ->  triple_dot,

  "::"    ->  double_colon,
  "||"    ->  double_pipe,
  "<<"    ->  double_lower,
  ">>"    ->  double_greater,

  "(-_)"    -> operator(:unary_minus),
  "(_+_)"   -> operator(:plus),
  "(_-_)"   -> operator(:minus),
  "(_*_)"   -> operator(:star),     ## RENAME
  "(_/_)"   -> operator(:slash),    ## RENAME
  "(_^_)"   -> operator(:exp),      ## RENAME
  "(_&_)"   -> operator(:amp),      ## RENAME
  "(_<_)"   -> operator(:lower),
  "(_>_)"   -> operator(:greater),
  "(_<=_)"  -> operator(:lower_eq),
  "(_>=_)"  -> operator(:greater_eq),
  "(_[_])"  -> operator(:brackets)
];
