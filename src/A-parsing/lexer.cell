Nat alphanum_length(Nat* bytes, Nat offset) {
  len = 0;
  while is_alphanum(bytes, nat(offset+len), :any):
    len = len + 1;
  ;
  return nat(len);
}

Nat digit_length(Nat* bytes, Nat offset) {
  len = 0;
  while is_digit(bytes, nat(offset+len)):
    len = len + 1;
  ;
  return nat(len);
}

