[CoreWFError] core_wf_errors(Program prg) {
  let program = prg:
    errs = core_wf_errors(program = prg, typedefs = schema_and_typedefs);
  ;
  return errs;
}

////////////////////////////////////////////////////////////////////////////////

implicit program : Program, typedefs : [TypeName -> NeType] {
  [CoreWFError] core_wf_errors {
    fndefs_families = group_by(program.fndefs, family_id($.id));
    functions_errs = union([function_family_errors(fs) : unused_var, fs <- fndefs_families]);
    return typedefs_errors & functions_errs & databases_errors & automata_errors;
  }

  //////////////////////////////////////////////////////////////////////////////

  [CoreWFError] typedefs_errors {
    shallow_refs_map = [n -> direct_refs(t) : n, t <- typedefs];
    deep_refs_map = transitive_closure(shallow_refs_map);
    return [non_nested_self_ref(t) : t, ts <- deep_refs_map, ts(t)];

    [TypeName] direct_refs(NeType type) =
      type_ref(type_symbol() ts?)     = [type_name(ts, 0)],
      type_ref(par_type_symbol() ts?) = [type_name(ts.symbol, |ts.params|)],
      union_type(ts?)                 = union([direct_refs(t) : t <- ts]),
      _                               = [];
  }

  //////////////////////////////////////////////////////////////////////////////

  [CoreWFError] function_family_errors([+Function] functions) {
    ord_fns = rand_sort(functions);
    return [overlapping_signatures(f1, f2) : f1 @ i1 <~ ord_fns, f2 <~ drop(ord_fns, i1+1), overlap(f1, f2)];

    Bool overlap(Function f1, Function f2) =
      not (a1, a2 <~ zip(f1.args, f2.args) : are_ptype_disjoint(right(a1), right(a2)));
  }

  //////////////////////////////////////////////////////////////////////////////

  [CoreWFError] databases_errors {
    db_errs = union([database_errors(db) : db <- program.data_bases]);

    shallow_deps = [db.name -> values(db.nested_dbs) & set(db.links) : db <- program.data_bases];
    deep_deps = transitive_closure(shallow_deps);
    rec_errs = [recursively_defined_auto_or_db(automaton_by_id(db_type)) : db_type, deps <- deep_deps, deps(db_type)];

    return db_errs & rec_errs;
  }


  [CoreWFError] database_errors(Database database) {
    rel_var_errs = union(
      [rel_var_errors(v, info.signatures, info.keys, info.symmetric) : v, info <- database.rel_vars]
    );

    foreign_key_errs = union([foreign_key_errors(database, f) : f <- database.foreign_keys]);

    method_errs = union([
      [overlapping_signatures(m1, m2) : m1, m2 <- symmetric_cart_prod(ms), overlap(m1, m2)]
      : unused_var, ms <- group_by(database.methods, ($.name, arity($)))
    ]);

    updates_errs = union([
      [overlapping_signatures(u1, u2) : u1, u2 <- symmetric_cart_prod(us), overlap(u1, u2)]
      : unused_var, us <- group_by(database.updates, ($.name, arity($)))
    ]);

    handler_errs = [
      overlapping_signatures(h1, h2)
      : h1, h2 <- symmetric_cart_prod(database.handlers), not are_ptype_disjoint(h1.type, h2.type)
    ];

    errs = rel_var_errs & foreign_key_errs & method_errs & updates_errs & handler_errs;
    return [error_cluster(database, errs) if errs != []];
  }


  [CoreWFError] rel_var_errors(RelVar rel_var, [+NeType+] signatures, [[+Nat]] keys, Bool symmetric) {
    arities = [|s| : s <- signatures];
    return [multiple_rel_var_arities(rel_var, arities)] if |arities| != 1;
    return [
      overlapping_rel_var_signatures(rel_var, s1, s2)
      : s1, s2 <- symmetric_cart_prod(signatures), not are_ptype_disjoint(s1, s2)
    ];
  }


  [CoreWFError] foreign_key_errors(Database database, ForeignKey key) {
    src_rel = left(key.source);
    src_rel_info = database.rel_vars(src_rel);
    src_args, src_args_types = unzip(right(key.source));

    fail if src_args_types == ();
    src_sgns = [s : s <- src_rel_info.signatures, not are_disjoint(s, src_args_types)];
    return [no_signature_match(key, src_rel, src_rel_info.signatures, src_args_types)] if src_sgns == [];
    aggr_sgns = aggregated_elements(src_sgns, aggregated_signature);
    return [multiple_signature_matches(key, src_rel, src_sgns, src_args_types)] if |aggr_sgns| != 1;
    sgn = only(aggr_sgns);
    if not match_exactly(sgn, src_args_types):
      return [no_exact_signature_match(key, src_rel, sgn, src_args_types)];
    ;

    tgt_rel = left(key.target);
    tgt_rel_info = database.rel_vars(tgt_rel);
    tgt_args = right(key.target);

    for src_sgn <- isort(src_sgns):
      // Types of all variables when the key is applied to this specific signature of the source relation
      src_type_map = [value(a) -> src_sgn(i) : a @ i <~ src_args, a != nothing];
      tgt_args_types = (apply(a, src_type_map($)) : a <- tgt_args);
      // Signatures of the target that are not disjoint with the image of the source signature
      tgt_sgns = [s : s <- tgt_rel_info.signatures, not are_disjoint(s, tgt_args_types)];
      if tgt_sgns == []:
        return [no_signature_match(key, tgt_rel, tgt_rel_info.signatures, tgt_args_types)];
      elif |tgt_sgns| != 1:
        ## REALLY BAD ERROR MESSAGE. FIX
        return [multiple_signature_matches(key, tgt_rel, tgt_sgns, tgt_args_types)];
      ;
      tgt_sgn = only(tgt_sgns);
      if not is_subsignature(tgt_args_types, tgt_sgn):
        ## REALLY BAD ERROR MESSAGE. FIX
        return [no_exact_signature_match(key, tgt_rel, tgt_sgn, tgt_args_types)];
      ;
    ;

    is_supported = match (src_args, tgt_args)
      // unary -> unary
      (just()),                     (just())                    = true,

      // unary -> binary
      (just()),                     (just(),  nothing)          = true,
      (just()),                     (nothing, just())           = true,

      // unary -> ternary
      (just()),                     (just(), nothing, nothing)  = true,
      (just()),                     (nothing, just(), nothing)  = true,
      (just()),                     (nothing, nothing, just())  = true,

      // binary -> unary
      (just(), nothing),            (just())                    = true,
      (nothing, just()),            (just())                    = true,

      // ternary -> unary
      (just(), nothing, nothing),   (just())                    = true,
      (nothing, just(), nothing),   (just())                    = true,
      (nothing, nothing, just()),   (just())                    = true,

      // binary -> ternary
      (just(s1?), just(s2?)), (just(t1?), just(t2?), nothing)   = s1 == t1 and s2 == t2,

      // ternary -> binary
      (just(s1?), just(s2?), nothing),  (just(t1?), just(t2?))  = s1 == t1 and s2 == t2,

      _,                        _                               = false;

    return [unsupported_foreign_key_type(key)] if not is_supported;

    ## ARE THESE THE ONLY CASES WHERE WE EXPECT TABLES TO HAVE MATCHING SYMMETRIES?
    symmetry_is_fine = match (src_args, tgt_args)
      (just(), just()),           (just(), just(), nothing) = src_rel_info.symmetric == tgt_rel_info.symmetric,
      (just(), just(), nothing),  (just(), just())          = src_rel_info.symmetric == tgt_rel_info.symmetric,
      _,                          _                         = true;

    return [foreign_key_symmetry_mismatch(key)] if not symmetry_is_fine;

    ## IS THERE ANYTHING ELSE I'M SUPPOSED TO CHECK HERE?

    return [];


    Maybe[NeType+] aggregated_signature(NeType+ types1, NeType+ types2) {
      assert |types1| == |types2|;
      diff_idx = :none;
      for t1 @ i <- types1:
        t2 = types2(i);
        if not is_eq(t1, t2):
          return nothing if diff_idx != :none;
          diff_idx = i;
        ;
      ;
      // Works fine even if <diff_idx == :none>
      return just((if i != diff_idx then t else ne_union_type([t, types2(i)]) : t @ i <- types1));
    }


    // ## THESE ARE NOT SUPPOSED TO COMPILE, BUT THEY DO...
    // Bool are_disjoint(NeType+ types1, Maybe[NeType]+ types2)    = any(types2, types1, are_ptype_disjoint);
    // Bool match_exactly(NeType+ types1, Maybe[NeType]+ types2)   = all(types2, types1, is_eq);
    // Bool is_subsignature(Maybe[NeType]+ types2, NeType+ types1) = all(types2, types1, is_subset);


    Bool are_disjoint(NeType+ types1, Maybe[NeType]+ types2) {
      assert |types1| == |types2|;
      for t1 @ i <- types1:
        t2 = types2(i);
        return true if t2 != nothing and are_ptype_disjoint(t1, value(t2));
      ;
      return false;
    }


    Bool match_exactly(NeType+ types1, Maybe[NeType]+ types2) {
      assert |types1| == |types2|;
      for t1 @ i <- types1:
        t2 = types2(i);
        return false if t2 != nothing and not is_eq(t1, value(t2));
      ;
      return true;
    }


    Bool is_subsignature(Maybe[NeType]+ types2, NeType+ types1) {
      assert |types1| == |types2|;
      for t1 @ i <- types1:
        t2 = types2(i);
        return false if t2 != nothing and not is_subset(value(t2), t1);
      ;
      return true;
    }
  }

  //////////////////////////////////////////////////////////////////////////////

  [CoreWFError] automata_errors {
    auto_errs = union([automaton_errors(automaton=a) : a <- program.auto_defs]);

    shallow_deps = [auto.name -> [a.type : unused_var, a <- auto.nested_autos] : auto <- program.auto_defs];
    deep_deps = transitive_closure(shallow_deps);
    rec_errs = [recursively_defined_auto_or_db(automaton_by_id(auto_type)) : auto_type, deps <- deep_deps, deps(auto_type)];

    return auto_errs & rec_errs;
  }
}

