implicit typedefs : [TypeName -> NeType] {
  Bool overlap(<Method, Update> d1, <Method, Update> d2) =
    none((are_ptype_disjoint(left(a1), left(a2)) : a1, a2 <- zip(d1.args, d2.args)));
}
